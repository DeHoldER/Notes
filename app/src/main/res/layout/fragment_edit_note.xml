<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".NoteDetailsFragment">

        <EditText
            android:id="@+id/editText_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/note_detail_margin"
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/note_title_detail_text_size"
            tools:text="Title" />

        <TextView
            android:id="@+id/description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_title_text"
            android:textSize="@dimen/note_description_text_size" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/note_detail_margin"
            android:textColor="@color/light_grey"
            android:textSize="@dimen/note_date_text_size"
            tools:text="Date" />

        <TextView
            android:id="@+id/description_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_date_text"
            android:textSize="@dimen/note_description_text_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/note_detail_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/edit_color_white"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_margin="@dimen/margin_note_item"
                app:srcCompat="@drawable/ic_color_white" />

            <ImageView
                android:id="@+id/edit_color_green"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_margin="@dimen/margin_note_item"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_color_green" />

            <ImageView
                android:id="@+id/edit_color_red"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_margin="@dimen/margin_note_item"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_color_red" />

            <ImageView
                android:id="@+id/edit_color_blue"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_margin="@dimen/margin_note_item"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_color_blue" />

            <ImageView
                android:id="@+id/edit_color_yellow"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_margin="@dimen/margin_note_item"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_color_yellow" />

            <ImageView
                android:id="@+id/edit_color_purple"
                android:layout_width="@dimen/pic_size"
                android:layout_height="@dimen/pic_size"
                android:layout_margin="@dimen/margin_note_item"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_color_purple" />

        </LinearLayout>

        <TextView
            android:id="@+id/description_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_color_text"
            android:textSize="@dimen/note_description_text_size" />

        <EditText
            android:id="@+id/editText_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/note_detail_margin"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/note_text_size"
            tools:text="text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text text" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_text_text"
            android:textSize="@dimen/note_description_text_size" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>